ALIGNMENT=64

CXX=mpiicpc -DUSE_MPI=1
CXXFLAGS=-O3 -xMIC-AVX512
LDFLAGS=
DEFINES=-DALIGNMENT=$(ALIGNMENT)
SOURCES=poisson.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=app

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CXX) $(LDFLAGS) $(OBJECTS) -o $@

.cpp.o:
	$(CXX) -c $(CXXFLAGS) $< -o $@ $(DEFINES)
	
$(SOURCES): Makefile
	touch $@

clean:
	rm *.o $(EXECUTABLE)
